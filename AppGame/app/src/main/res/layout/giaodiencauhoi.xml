<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/choi" >
    
    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_weight="0.4">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtX2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/ngoisao"
                android:gravity="center"
                android:text="X2"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:clickable="true"
	        	android:onClick="chooseX2" />

            <TextView
                android:id="@+id/txt25"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@drawable/ngoisao"
                android:gravity="center"
                android:text="25%"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:clickable="true"
	        	android:onClick="choose25" />

            <TextView
                android:id="@+id/txt50"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/ngoisao"
                android:gravity="center"
                android:text="50%"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:clickable="true"
	        	android:onClick="choose50" />

            <TextView
                android:id="@+id/txt75"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/ngoisao"
                android:gravity="center"
                android:text="75%"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:clickable="true"
	        	android:onClick="choose75" />

        </LinearLayout>
        <RelativeLayout
                android:id="@+id/rltTb"
            	android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/noi"
                android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/txtThongBao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="5"
                android:layout_centerInParent="true"
                android:layout_margin="8dp"
                android:text="Dung roi"
                android:textColor="#FF0000"
                android:textSize="13sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtDiem"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/nd"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtSo"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/nd"
                android:gravity="center"
                android:text="1"
                android:textColor="#FF3300"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtLoai"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/nd"
                android:gravity="center"
                android:text="De"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtNguoi"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/nd"
                android:gravity="center"
                android:text="100"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.6"
    android:layout_marginTop="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/ch">
            <TextView
                android:id="@+id/txtCauHoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="48dp"
                android:text="Cau hoi"
                android:textColor="#000000"
                android:textSize="20sp"/>
        </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#999933"
            android:text="A"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:clickable="true"
            android:onClick="chooseA"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/txtB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#999933"
            android:text="B"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:clickable="true"
            android:onClick="chooseB"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/txtC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#999933"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:clickable="true"
            android:onClick="chooseC"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</ScrollView>
    </LinearLayout>
</RelativeLayout>

	
</LinearLayout>
